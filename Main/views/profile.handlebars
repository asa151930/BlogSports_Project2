<div class="container">
  <div class="gutters">
    <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
      <div class="card">
        <div class="card-body">
          <div class="settings">
            <div class="user-profile">
              <div class="user-photo">
                <img src="" alt="Sports Season">
              </div>
              <h5 class="username">{{{id}}}</h5>
              <h6 class="user-email">{{{email}}}</h6>
            </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
    <div class="card">
      <div class="card-body">
        <div class="row-gutters">
          <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <h5 class="mb-3 text-primary">
              Account Details
            </h5>
          </div>

          <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
            <div class="form-group">
              <label for="Name">
                Full Name
              </label>
              <input
                type="text"
                class="form"
                id="Name"
                placeholder="Update Name"
              />
            </div>
          </div>

        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
            <div class="form-group">
              <label for="Email">
                Email Address
              </label>
              <input
                type="email"
                class="form"
                id="Email"
                placeholder="Update Email Address"
              />
            </div>
        </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
            <div class="form-group">
              <label for="Phone #">
                Phone #
              </label>
              <input
                type="text"
                class="form"
                id="Phone #" 
                placeholder="Update Phone #"
              />
            </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
            <div class="form-group">
              <label for="LinkedIn">
                LinkedIn Profile
              </label>
              <input
                type="url"
                class="form"
                id="LinkedIn" 
                placeholder="Update LinkedIn URL"
              />
            </div>
          </div>
        </div>
        <br>
        <div class="gutters">
           <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
               <h6 class="mb-3 text-primary">Address</h6>
           </div>

           <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
            <div class="form-group">
              <label for="Street">
                Street
              </label>
              <input
                type="text"
                class="form"
                id="Street" 
                placeholder="Update Street"
              />
            </div>
           </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
            <div class="form-group">
              <label for="City">
                City
              </label>
              <input
                type="name"
                class="form"
                id="City" 
                placeholder="Update City"
              />
            </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
            <div class="form-group">
              <label for="State">
                State
              </label>
              <input
                type="text"
                class="form"
                id="State" 
                placeholder="Update State">
              </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
            <div class="form-group">
              <label for="Zip">
                Zipcode
              </label>
              <input
                type="text"
                class="form"
                id="Zip" 
                placeholder="Update Zipcode">
            </div>
        </div>
      </div>
      <div class="gutters">
          <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
              <div class="text-right">
                  <button type="button" id="submit" name="submit" class="btn btn-secondary">Reset</button>
                  <button type="button" id="submit" name="submit" class="btn btn-success">Update</button>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/profile.js"></script>